{
  "$schema": "http://json.schemastore.org/template",
  "author": "Skyline Communications",
  "classifications": [ "DataMiner" ],
  "tags": {
    "language": "C#",
	"type": "solution"
  },
  "identity": "Skyline.DataMiner.SrmFunctionSolution",
  "name": "DataMiner SRM Function Solution",
  "shortName": "dataminer-srmfunction-solution",
  "sourceName": "DataMinerSrmFunctionSolutionTemplate",
  "symbols": {
    "ScriptName": {
        "type": "parameter",
        "isRequired": true,
        "datatype": "string",
        "replaces": "$SCRIPTNAME$",
        "FileRename": "ProfileLoadScript",
        "description": "The name of the profile load script."
    },
    "Author": {
        "isRequired": true,
        "type": "parameter",
        "datatype": "string",
        "defaultValue": "SKYLINE2\\",
        "replaces": "$AUTHOR$",
        "description": "The author."
    },
    "AuthorJson": {
        "isRequired": true,
        "type": "generated",
        "generator": "regex",
        "parameters": {
            "source": "Author",
            "steps": [
                {
                    "regex": "\\\\",
                    "replacement": "\\\\"
                }
            ]
        },
        "replaces": "$AUTHORJSON$"
    },
    "CopyrightYear": {
        "type": "generated",
        "generator": "now",
        "replaces": "$COPYRIGHTYEAR$",
        "parameters": {
            "format": "yyyy"
        }
    },
    "InitialVersionDate": {
        "type": "generated",
        "generator": "now",
        "replaces": "$INITIALVERSIONDATE$",
        "parameters": {
            "format": "yyyy-MM-dd"
        }
    },
	"FunctionName": {
        "type": "parameter",
        "isRequired": true,
        "datatype": "string",
        "replaces": "$FUNCTIONNAME$",
        "description": "The name of the SRM function."
    },
    "FunctionId": {
        "type": "generated",
        "generator": "guid",
        "replaces": "$FUNCTIONID$",
        "description": "The ID of the SRM function."
    },
    "ProtocolName": {
        "type": "parameter",
        "isRequired": true,
        "datatype": "string",
        "replaces": "$PROTOCOLNAME$",
        "description": "The name of the connector associated with this SRM function."
    },
    "ProfileDefinitionName": {
        "type": "parameter",
        "isRequired": true,
        "datatype": "string",
        "replaces": "$PROFILEDEFINITIONNAME$",
        "FileRename": "ProfileDefinitionName",
        "description": "The name of the profile definition associated with this SRM function."
    },
    "ProfileDefinitionId": {
        "type": "generated",
        "generator": "guid",
        "replaces": "$PROFILEDEFINITIONID$",
        "description": "The ID of the profile definition."
    },
    "ProfileCreatedAt": {
        "type": "generated",
        "generator": "now",
        "replaces": "$PROFILECREATEDAT$",
        "parameters": {
            "format": "yyyy-MM-ddTHH:mm:ss.fffffffZ"
        }
    }
  },
